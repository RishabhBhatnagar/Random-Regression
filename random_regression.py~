import numpy as np
import matplotlib.pyplot as plt
import pandas as pd
from sklearn import linear_model

train_data = pd.read_csv("../datasets/random_regression/train.csv")
test_data = pd.read_csv("../datasets/random_regression/test.csv")

x, y = np.array(train_data['x'][1:]), np.array(train_data['y'][1:])
plt.show()

model = linear_model.LinearRegression()
model.fit(x.reshape(-1, 1), y.reshape(-1, 1))

print(model.predict(np.array(test_data[1:]).reshape(-1, 1))-np.array(test_data[1:]).reshape(-1, 1))
